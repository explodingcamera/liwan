{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"assist": {
		"enabled": true,
		"actions": { "recommended": true, "source": { "recommended": true, "organizeImports": "off" } }
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"css": {
		"parser": { "cssModules": true },
		"formatter": {
			"indentStyle": "space"
		}
	},
	"linter": {
		"rules": {
			"nursery": {
				"useUniqueElementIds": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useSemanticElements": "off",
				"noStaticElementInteractions": "off"
			},
			"style": {
				"noDescendingSpecificity": "off"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/dist/*",
			"!**/target/*",
			"!**/.astro/*",
			"!**/api/dashboard.ts",
			"!tracker/script.min.js",
			"!tracker/script.d.ts"
		]
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		}
	]
}

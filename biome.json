{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"css": {
		"parser": { "cssModules": true },
		"formatter": {
			"indentStyle": "space"
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useSemanticElements": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"**/node_modules/*",
			"**/dist/*",
			"**/target/*",
			"**/api/dashboard.ts",
			"tracker/script.min.js",
			"tracker/script.d.ts"
		]
	}
}

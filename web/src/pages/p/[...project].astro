---
import type { GetStaticPaths } from "astro";

import { Project } from "../../components/project";
import Layout from "../../layouts/Layout.astro";

export const getStaticPaths = (() => {
	return [{ params: { project: "project" } }];
}) satisfies GetStaticPaths;

export const prerender = import.meta.env.MODE !== "development";
---

<Layout title="Project Details">
  <Project client:only="react" />
</Layout>

<style>
	/* prevent a flash of scrollbar when navigating to this page, as it always has a scrollbar */
	/* not super important but improves the lighthouse score from like 70 to 100 lol */
	:global(html) {
		overflow-y: scroll;
	}
</style>
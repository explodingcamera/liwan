---
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import Base from "./Base.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<Base {title}>
  <header class="container-fluid">
    <nav>
      <ul>
        <li>
          <a href="/" class="contrast logo">
            <img src="/favicon.svg" alt="liwan logo" width="24" height="24" />
            <strong>Liwan</strong></a
          >
        </li>
      </ul>
      <ul>
        <li><a href="/login">Login</a></li>
        <ThemeSwitcher />
      </ul>
    </nav>
  </header>
  <main class="container-fluid">
    <slot />
  </main>
</Base>

<style>
  main {
    flex: 1;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  main,
  header {
    max-width: 60rem;
    padding: 1rem 2rem;
  }
</style>
